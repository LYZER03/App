# Production environment template
# Copy this file to .env.production for production deployments

# Database configuration
DATABASE_URL=postgresql://username:password@production-db-host:5432/sushi_shop_production
PRISMA_ACCELERATE_URL=your_prisma_accelerate_url_for_production

# Authentication
NEXTAUTH_URL=https://sushi-shop-app.com
NEXTAUTH_SECRET=use_strong_unique_secret_for_production
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# API
API_BASE_URL=https://sushi-shop-app.com/api

# Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe for payments
STRIPE_PUBLIC_KEY=your_stripe_public_key_for_production
STRIPE_SECRET_KEY=your_stripe_secret_key_for_production
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_for_production

# Application
APP_ENV=production
APP_URL=https://sushi-shop-app.com
